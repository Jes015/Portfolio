---
import Experience from "@components/Experience.astro"
import { CExperiences } from "@src/data/experiences.data"
import { CRoutes } from "@src/models"
---

<section id={CRoutes.Experience} class="scroll experience">
    <div class="scroll experience__container">
        {
            CExperiences.map((experienceData) => (
                <Experience data={experienceData} />
            ))
        }
        <div style="min-width: 50%"></div>
    </div>
</section>
<style is:global>
    .experience__container {
        display: flex;
        flex-wrap: wrap;
        align-items: start;
        height: 100%;
        overflow-y: scroll;
    }

    .experience__container > * {
        flex-grow: 1;
    }

    .experience:nth-of-type(1) {
        background-color: var(--secondary-background-color);
        background: var(--primary-background-color);
        background: linear-gradient(
            10deg,
            rgba(26, 40, 75, 1) 0%,
            rgba(15, 23, 42, 1) 50%,
            rgba(26, 40, 75, 1) 100%
        );
        opacity: 1;
    }

    .experience__container:hover .experience:nth-of-type(1) {
        background: transparent;
    }
</style>
