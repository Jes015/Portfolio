---
import Project from "@components/Project.astro"
import { CProjects } from "@src/data/projects.data"
import { CRoutes } from "@src/models"
---

<section class="projectsSection" id={CRoutes.Projects}>
  <div class="projectsSection__project-container scroll">
    {CProjects.map((projectData) => <Project data={projectData} />)}
  </div>
</section>

<style is:global>
  .projectsSection {
    height: 100%;
  }
  .projectsSection__project-container {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(12em, 1fr));
    grid-auto-rows: minmax(68%, 1fr);

    height: 100%;
    overflow-y: scroll;
  }

  .project:nth-of-type(1) {
    background-color: var(--secondary-background-color);
    background: var(--primary-background-color);
    background: linear-gradient(
      84deg,
      rgba(26, 40, 75, 1) 0%,
      rgba(15, 23, 42, 1) 50%,
      rgba(26, 40, 75, 1) 100%
    );
    opacity: 1;
  }

  .projectsSection__project-container:hover .project:nth-of-type(1) {
    background: transparent;
  }
</style>
