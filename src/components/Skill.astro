---
import { IconLink } from "@components/Icons"
import type { ISkill } from "@src/models"

interface Props {
    skillData: ISkill;
    style?: Record<string, any>;
}

const { style, skillData } = Astro.props;
---

<article id="skill" class="skill" {...{ style }}>
    <header class="skill__header">
        <skillData.Icon className="skill__icon-tech" />
        <section class="skill__tech-data">
            <div class="skill__title-container">
                <h2 class="skill__title">{skillData.name}</h2>
                <a href="https://react.dev/" target="_blank" rel="noreferrer">
                    <IconLink className="skill__link-icon" />
                </a>
            </div>
            <span class="skill__projects-count">
                {skillData.projects.length} Projects</span
            >
        </section>
    </header>
</article>

<style is:global>
    .skill {
        display: flex;
        align-items: center;
        justify-content: space-between;
        opacity: 0.75;
        padding: 0.5em;
        border: 0.1em solid var(--primary-border-color);
        border-left: none;
        border-top: none;
        transition: 0.3s opacity ease;
        text-transform: capitalize;
        display: flex;
        align-items: center;
        cursor: pointer;
    }

    .skill__header {
        display: flex;
        align-items: center;
        gap: 0.6em;
    }

    .skill__projects-count {
        font-size: 0.7em;
        font-weight: 600;
        color: var(--secondary--textCard-font);
    }

    .skill__title-container {
        display: flex;
        align-items: center;
        gap: 0.3em;
    }

    .skill__tech-data {
        display: flex;
        flex-direction: column;
    }

    .skill__title {
        color: var(--primary-text-color);
        font-size: 1.2em;
        font-weight: 600;
    }
    .skill__icon-tech {
        width: 2em;
        height: 2em;
    }

    .skill__link-icon {
        width: 1.3em;
        height: 1.3em;
    }

    .skill__button {
        background-color: var(--secondary-background-color);
        border: 0.1em solid var(--primary-border-color);
        padding: 0.2em;
        color: var(--primary-text-color);
    }

    .skill:hover {
        opacity: 1;
    }
</style>
