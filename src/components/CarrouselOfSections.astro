---
import Projects from "@components/Projects.astro";
import { CRoutes } from "@models/index";
---

<section class="carrousel">
    <header></header>
    <main class="carrousel__sections-Contaier">
        <Projects />
        <section id={CRoutes.Experience}>Expeee</section>
        <section id={CRoutes.Test}>Testtttttt</section>
    </main>
    <footer></footer>
</section>

<style is:global>
    .carrousel {
        width: 45em;
        display: flex;
        flex-direction: column;
    }

    .carrousel__sections-Contaier {
        flex-grow: 1;
        overflow: hidden;
        scroll-behavior: smooth;
        white-space: nowrap;
    }
    .carrousel__sections-Contaier > * {
        width: 100%;
        height: 25em;
        display: inline-block;
        overflow: hidden;
    }
</style>
