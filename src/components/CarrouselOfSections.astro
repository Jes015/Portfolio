---
import Experiences from "@components/Sections/Experiences.astro"
import Projects from "@components/Sections/Projects.astro"
import Skills from "./Sections/Skills.astro"
---

<section class="carrousel">
    <header></header>
    <main class="carrousel__sections-Contaier">
        <Projects />
        <Experiences />
        <Skills />
    </main>
    <footer></footer>
</section>

<style is:global>
    .carrousel {
        height: 100%;
        width: 45em;
        display: flex;
        flex-direction: column;
        border: 0.1em solid var(--primary-border-color);
        border-left: none;
    }

    .carrousel__sections-Contaier {
        height: 100%;
        flex-grow: 1;
        display: flex;
        flex-direction: row;
        flex-wrap: nowrap;
        overflow: hidden;
        scroll-behavior: smooth;
        white-space: nowrap;
    }
    .carrousel__sections-Contaier > * {
        flex-basis: 100%;
        flex-shrink: 0;
        width: 100%;
        height: 100%;
        overflow: hidden;
    }

    @media (width <= 606px) {
        .carrousel {
            width: 100%;
        }
    }
</style>
