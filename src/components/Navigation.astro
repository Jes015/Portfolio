---
import { CRoutes } from "@src/models";
---

<section class="navigation">
    <nav class="navigation__nav">
        <ul class="navigation__list">
            {
                Object.entries(CRoutes).map(([, value]) => (
                    <li class="navigation__list-item">
                        <a class="navigation__ancord" href={`#${value}`}>
                            {value}
                        </a>
                    </li>
                ))
            }
        </ul>
    </nav>
</section>

<script src="@scripts/navigation.script"></script>

<style>
    .navigation {
        height: 100%;
        border: none !important;
        padding: 0 !important;
    }
    .navigation__nav {
        height: 100%;
    }
    .navigation__list {
        height: 100%;
        display: flex;
        flex-direction: column;
        width: 100%;
    }
    .navigation__list-item {
        flex-grow: 1;
    }
    .navigation__ancord {
        display: inline-flex;
        justify-content: center;
        align-items: center;

        width: 100%;
        height: 100%;

        font-weight: 900;
        text-transform: capitalize;
        text-decoration: none;
        background-color: var(--secondary-background-color);
        border: 0.1em solid var(--primary-border-color);
        border-radius: 0.1em;
    }

    .navigation__ancord:hover,
    .navigation__ancord-selected {
        background-color: var(--primary-border-color);
    }
</style>
