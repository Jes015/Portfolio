---
import { type TTechsArray } from '@src/models'

interface Props {
    techs: TTechsArray;
}
const { techs } = Astro.props;
---

<ul class="scroll tech__list">
    {
        techs.map((tech) => (
            <li>
                <span class="tech__span">{tech.name}</span>
            </li>
        ))
    }
</ul>

<style>
    .tech__list {
        flex-grow: 1;
        margin-top: 0.3em;
        display: flex;
        flex-wrap: wrap;
        max-height: 5em;
        overflow-y: auto;
        gap: 0.3em;
        align-content: start;
    }

    .tech__span {
        display: inline-block;
        padding: 0.2em;
        border: 0.1em solid var(--primary-border-color);
        border-radius: 0.3em;
        font-size: 0.85em;
        text-transform: capitalize;
    }
</style>
