---
import About from "@components/About.astro";
import CarrouselOfSections from "@components/CarrouselOfSections.astro";
import Navigation from "@components/Navigation.astro";
---

<div class="portfolio__container">
    <div class="portfolio__nav-about-container">
        <About />
        <Navigation />
    </div>
    <CarrouselOfSections />
</div>
<style is:global>
    .portfolio__container {
        display: flex;
        justify-content: center;
        align-items: flex-start;
        height: 27.399375em;

        border-radius: 0.2em;
    }

    .portfolio__nav-about-container {
        display: flex;
        flex-direction: column;
        height: 100%;
        overflow: hidden;
    }

    .portfolio__container > section {
        border: 0.1em solid var(--primary-border-color);
    }
    .portfolio__container > .portfolio__nav-about-container > * {
        flex-grow: 1;
        border: 0.1em solid var(--primary-border-color);
    }
</style>
